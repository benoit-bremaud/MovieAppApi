{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "MovieAppApi",
          "files": [
            "MovieAppApi.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**/*.yml",
          "api/**.yml"
        ]
      },
      {
        "files": [
          "docfx_project/articles/**/*.md"
        ]
      },
      {
        "files": [
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docfx_project/images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "MovieApp",
      "_appTitle": "MovieApp API Documentation",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
